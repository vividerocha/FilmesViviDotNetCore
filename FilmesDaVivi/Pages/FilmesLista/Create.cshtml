@page
@model FilmesDaVivi.Pages.FilmesLista.CreateModel

<br />

<h2 class="text-info">Adicionar Filme</h2>

<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Filmes.Titulo"></label>
            </div>
            <div class="col-6">
                <input asp-for="Filmes.Titulo" class="form-control" />
            </div>
            <span asp-validation-for="Filmes.Titulo" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Filmes.Genero"></label>
            </div>
            <div class="col-6">
                <input asp-for="Filmes.Genero" class="form-control" />
            </div>
            <span asp-validation-for="Filmes.Genero" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Adicionar" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Voltar</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}
